<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/bgBiru"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/birutwt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/panah"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/panah"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="5dp"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/cari"
        android:layout_width="90dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/garis3"
        android:layout_marginTop="-10dp"
        android:layout_marginEnd="5dp"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/garis3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/baseline_view_headline_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="12dp"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitCenter"
        android:clipToOutline="true"
        android:elevation="6dp"/>

    <TextView
        android:id="@+id/namaProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whispond"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/profile"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @whispond"
        android:textSize="15sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/profile"
        android:layout_marginStart="-8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/angkaFoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.1K"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="135dp"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="@id/angkaFoll"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/angkaWers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 M"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="@id/following"
        android:layout_marginStart="90dp"
        android:layout_marginTop="9dp"/>

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="@id/angkaWers"
        android:layout_marginStart="35dp"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/built"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Built to grow your business. ðŸ¶ DM for support!"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="35dp"/>

    <ImageView
        android:id="@+id/lokasi"
        android:layout_width="17dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/location"
        app:tint="#2280e5"
        app:layout_constraintTop_toBottomOf="@id/built"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/vancover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vancover, Canada"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/built"
        app:layout_constraintStart_toStartOf="@id/lokasi"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="7dp"/>

    <ImageView
        android:id="@+id/kalender"
        android:layout_width="17dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/calendar"
        app:tint="#2280e5"
        app:layout_constraintTop_toBottomOf="@id/lokasi"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Joined August 2019"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/vancover"
        app:layout_constraintStart_toStartOf="@id/kalender"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/link"
        android:layout_width="17dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/link"
        app:tint="#808080"
        app:layout_constraintTop_toBottomOf="@id/kalender"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/namaLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="linktr.ee/wishpondasek"
        android:textColor="#87CEFA"
        app:layout_constraintTop_toBottomOf="@id/joined"
        app:layout_constraintStart_toStartOf="@id/link"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/postingan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Postingan"
        android:textColor="#666666"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/link"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"
        android:layout_marginStart="35dp"
        />

    <TextView
        android:id="@+id/balasan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balasan"
        android:textColor="#666666"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/link"
        app:layout_constraintStart_toStartOf="@id/postingan"
        android:layout_marginTop="22dp"
        android:layout_marginStart="100dp"/>

    <TextView
        android:id="@+id/media"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media"
        android:textColor="#666666"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/link"
        app:layout_constraintStart_toStartOf="@id/balasan"
        android:layout_marginTop="22dp"
        android:layout_marginStart="100dp" />

    <TextView
        android:id="@+id/suka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suka"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/link"
        app:layout_constraintStart_toStartOf="@id/media"
        android:layout_marginTop="22dp"
        android:layout_marginStart="100dp" />

    <ImageView
        android:id="@+id/garis"
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:srcCompat="@drawable/garis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/postingan"
        android:layout_marginTop="-240dp"
        android:layout_marginEnd="3dp"/>

    <ImageView
        android:id="@+id/garisBiru"
        android:layout_width="56dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/remove"
        app:layout_constraintBottom_toTopOf="@id/garis"
        android:layout_marginBottom="-280dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="330dp"/>

    <ImageView
        android:id="@+id/profile2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/profile"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-250dp"/>

    <TextView
        android:id="@+id/wishpond2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wishpond"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintStart_toStartOf="@id/profile2"
        android:layout_marginStart="90dp"
        android:layout_marginTop="-230dp"/>

    <TextView
        android:id="@+id/username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" @Wishpond . 08 Feb"
        android:textColor="#808080"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintStart_toStartOf="@id/wishpond2"
        android:layout_marginStart="70dp"
        android:layout_marginTop="-230dp"/>

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hahaha"
        app:layout_constraintTop_toBottomOf="@id/garis"
        app:layout_constraintStart_toStartOf="@id/profile2"
        android:layout_marginStart="93dp"
        android:layout_marginTop="-210dp"/>

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="313dp"
        android:layout_height="239dp"
        app:srcCompat="@drawable/ritsuki"
        app:layout_constraintTop_toBottomOf="@id/caption"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>